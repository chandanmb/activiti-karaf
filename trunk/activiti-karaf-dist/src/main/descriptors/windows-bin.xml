<assembly>
    <id>bin</id>    
    <formats>
        <format>zip</format>
    </formats>    
    <fileSets>
    
        <!-- Expanded Karaf Standard Distribution -->
        <fileSet>
            <directory>${basedir}/target/dependencies/windows/apache-karaf-${karaf.version}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>bin/**</exclude>
                <exclude>demos/**</exclude>
                <exclude>etc/org.apache.karaf.features.cfg</exclude>
                <exclude>etc/org.ops4j.pax.logging.cfg</exclude>
                <exclude>etc/system.properties</exclude>
                <exclude>etc/users.properties</exclude>
                <exclude>etc/custom.properties</exclude>
                <exclude>karaf-manual*</exclude>
                <exclude>LICENSE</exclude>
                <exclude>NOTICE</exclude>
                <exclude>README</exclude>
                <exclude>RELEASE-NOTES</exclude>
                <exclude>deploy</exclude>
            </excludes>
        </fileSet>
        
		<!-- Copy over bin/* separately to get the correct file mode -->
        <fileSet>
            <directory>${basedir}/target/dependencies/windows/apache-karaf-${karaf.version}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/admin.bat</include>
                <include>bin/client.bat</include>
                <include>bin/karaf.bat</include>
                <include>bin/setenv.bat</include>
                <include>bin/shell.bat</include>
                <include>bin/start.bat</include>
                <include>bin/stop.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
                
        <!-- Copy license and other files from root -->        
        <fileSet>
            <directory>${basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README</include>
                <include>LICENSE</include>
                <include>NOTICE</include>
            </includes>
            <lineEnding>dos</lineEnding>
        </fileSet>
       
        <!-- Copy etc directory -->
        <fileSet>
            <directory>target/classes/etc</directory>
            <outputDirectory>/etc</outputDirectory>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <!-- Copy ext directory -->
        <fileSet>
            <directory>${basedir}/target/dependencies/ext</directory>
            <outputDirectory>/lib/ext</outputDirectory>
        </fileSet>
                
        <!-- Copy features repo in the system directory -->
        <fileSet>
            <directory>${basedir}/target/features-repo</directory>
            <outputDirectory>/system</outputDirectory>
        </fileSet>
        
	    <!-- Copy source and examples directory -->
	    <fileSet>
	        <directory>${basedir}/..</directory>
	        <outputDirectory>/sources</outputDirectory>
	        <includes>
	            <include>activiti-karaf-parent/**/</include>
                <include>activiti-bpmn-archetype/**/</include>
                <include>activiti-karaf-examples/**/</include>	            
	        </includes>
	        <excludes>
	            <exclude>mvn</exclude>
	            <exclude>build.sh</exclude>
	            <exclude>**/target/</exclude>
	            <exclude>**/.settings/</exclude>
	            <exclude>**/.gitignore</exclude>
	            <exclude>**/.repository/</exclude>
	        </excludes>
	        <lineEnding>dos</lineEnding>
	    </fileSet>  
